{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/inventory-hub-back-end/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/inventory-hub-back-end/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/inventory-hub-back-end",
  "projects": {
    "inventory-hub-back-end": {
      "type": "application",
      "root": "apps/inventory-hub-back-end",
      "entryFile": "main",
      "sourceRoot": "apps/inventory-hub-back-end/src",
      "compilerOptions": {
        "tsConfigPath": "apps/inventory-hub-back-end/tsconfig.app.json"
      }
    },
    "event-consumer": {
      "type": "application",
      "root": "apps/event-consumer",
      "entryFile": "main",
      "sourceRoot": "apps/event-consumer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/event-consumer/tsconfig.app.json"
      }
    }
  }
}